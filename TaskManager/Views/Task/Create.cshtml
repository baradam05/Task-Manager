@using TaskManager.Models.Dto
@using TaskManager.Models.DbModel
@model CreateTaskDto

<h3>New task</h3>

<form asp-action="Create">
    <div class="form-group">
        <label for="taskName">Task Name</label>
        <input asp-for="Name" type="text" class="form-control" id="taskName" />
    </div>
    <div class="form-group">
        <label for="taskDetails">Task Details</label>
        <textarea asp-for="Assigment" class="form-control" id="taskDetails" placeholder="Task details"></textarea>
    </div>
    <div class="form-group">
        <label for="assignedTo">Assigned To</label>
        <select asp-for="AssignedTo" class="form-control" id="assignedTo">
            @foreach (User user in this.ViewBag.Users)
            {
                <option value="@user.Id">@user.Username</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="startDate">From</label>
        <div class="form-row">
            <div class="col-md-6">
                <input asp-for="StartDate" type="date" class="form-control" id="startDate" />
            </div>
            <div class="col-md-3 d-flex flex-row">
                <input asp-for="StartHours" type="text" class="form-control" placeholder="HH" />
                <input asp-for="StartMinutes" type="text" class="form-control" placeholder="MM" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="endDate">To</label>
        <div class="form-row">
            <div class="col-md-6">
                <input asp-for="EndDate" type="date" class="form-control" id="endDate" />
            </div>
            <div class="col-md-3 d-flex flex-row">
                <input asp-for="EndHours" type="text" class="form-control" placeholder="HH" />
                <input asp-for="EndMinutes" type="text" class="form-control" placeholder="MM" />
            </div>
        </div>
    </div>
    <div class="form-group mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
        <button type="reset" class="btn btn-warning">Restart</button>
        <button type="submit" class="btn btn-primary">Assign</button>
    </div>
</form>